<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="wrap">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("HomeManager", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Inicio", "Index", "Home")</li>*@
                        <li class="dropdown">
                            @*@Html.ActionLink("Catalagos", "Index", "Productos", null, new { @class = "dropdown-toggle", role = "button" })<span class="caret"></span>*@
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Catalogos <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Categorias", "Index", "Categorias")</li>
                                <li>@Html.ActionLink("Productos", "Index", "Productos")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Proveedores", "Index", "Proveedores")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Compras", "Index", "Facturas")</li>
                        @*<li>@Html.ActionLink("Proveedores", "Index", "Home")</li>*@
                        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    </div>
    <footer>
        <div id="footer">
            <div class="container">
                <p class="credit">&copy; @DateTime.Now.Year - Gestion de Gastos del Hogar </p>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/menu.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
