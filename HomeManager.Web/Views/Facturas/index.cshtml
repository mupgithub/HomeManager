@model IEnumerable<HomeManager.Entidades.Factura>

@{
    ViewBag.Title = "index";
}

<h2>index</h2>
<p>
    @Html.ActionLink("Crear Factura", "Create", "Facturas", new { @class = "btn btn-primary", data_modal = "producto" })
</p>

<div class="col-md-10">
    <table class="table table-hover table-striped">
        <tr>
            <th class="col-md-1">Factura ID</th>
            <th class="col-md-1">Proveedor</th>
            <th class="col-md-1">Fecha</th>
            <th class="col-md-1">Importe</th>
            <th class="col-md-1"></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Proveedor.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>@Html.DisplayFor(modelItem => item.Importe)</td>
                <th class="col-md-1">
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id })
                </th>
            </tr>
        }
    </table>
</div>