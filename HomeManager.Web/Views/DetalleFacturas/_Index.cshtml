@model IEnumerable<HomeManager.Entidades.DetalleFactura>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Detalle de Factura</strong>
    </div>

    <table class="table table-hover table-striped table-condensed small">
        <tr>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.ProductoId)
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th class="col-md-1 text-right">
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th class="col-md-1">
                @Html.ActionLink("Create", "Create", "DetalleFacturas",
                new {FacturaId = ViewBag.FacturaId  },
                new { @class = "btn btn-primary btn-xs", data_modal = "detalle" })
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductoId )
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "DetalleFacturas",
                    new { id = item.Id, FacturaId = ViewBag.FacturaId },
                    new { @class = "btn btn-default btn-xs", data_modal = "detalle" })

                    @Html.ActionLink("Delete", "Delete", "DetalleFacturas",
                    new {  id = item.Id, FacturaId = ViewBag.FacturaId },
                    new { @class = "btn btn-danger btn-xs", data_modal = "detalle" })
                </td>
            </tr>
        }

    </table>
</div>

