@model HomeManager.Entidades.DetalleFactura

@{
    ViewBag.Title = "Create";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="detalleModalLabel">Crear Detalle</h4>
</div>

@using (Html.BeginForm(null, null, FormMethod.Get, new { id = "nuevodetalle" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Factura.Proveedor.Nombre)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Factura.Proveedor.Nombre, new { htmlAttributes = new { @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProductoId, "ProductoId", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ProductoId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProductoId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Precio, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Precio)
                    @Html.ValidationMessageFor(model => model.Precio)
                </div>
            </div>


        </div>
    </div>

    <div class="modal-footer">
        <a class="btn btn-default" data-dismiss="modal">Cerrar</a>
        <input class="btn btn-primary" type="submit" value="Guardar" />
    </div>

}