@using HomeManager.Entidades
@model List<Producto>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Crear producto", "CrearProducto")
</p>
@if (Model.Count != 0) {
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Categoria.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].UltimoPrecio)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UltimoPrecio)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}else
{
    <h4>Catálogo de productos vacio</h4>
}